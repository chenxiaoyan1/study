@import "../../style/iconfont.wxss";
.tool{
  width: 100%;
  display: flex;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.tool .tool-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0rpx;
}
.kefu,.share,.car{
  position: relative;
}
.kefu button,.share button,.car navigator{
  /*按钮设置成透明，实际点击的是按钮*/
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
}
.kefu,.share,.car{
  flex: 2;
  font-size: 26rpx;
}
.addCar,.buy{
  flex: 3;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  justify-content: center;
}
.addCar{
  background-color:#FFD700;
}
.buy{
  padding: 0rpx;
  background-color: var(--themeColor);
}


